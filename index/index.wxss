/**index.wxss**/
.slider image{
  width: 100%;
  height: 80rpx;
}

.index-nav {
  display: flex;
  flex-wrap: wrap;

}

.index-nav .nav-item{
  display: flex;
  flex-direction: column;
  width: 33.3333%;
  height: 200rpx;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ccc;
}


.index-nav .nav-item:nth-child(3n)::after{
  width: 0rpx;
}


.nav-item image{
  width: 80rpx;
  height: 80rpx;
}

.nav-item text{
  font-size: 12px;
  color: #666666;
}

/* 首页入口 */
.index-enter {
  display: flex;
  padding: 20prx 20rpx;
  margin-top: 20rpx;
}

.index-enter .enter-item{
  width:50%;
  display: flex;
  justify-content: center;
}

.index-enter image{
  width: 320rpx;
  height:178rpx;
}

